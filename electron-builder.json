{
  "appId": "com.example.nextjs-electron-app",
  "productName": "Next.js Electron App",
  "publish": null,
  "forceCodeSigning": false,
  "afterSign": null,
  "afterAllArtifactBuild": null,
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": ["dist/electron/**/*", "out/**/*", "package.json"],
  "extraResources": [
    {
      "from": "out",
      "to": "app",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "identity": null
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "sign": false,
    "certificateFile": null,
    "certificatePassword": null
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "dmg": {
    "title": "${productName}"
  }
}
