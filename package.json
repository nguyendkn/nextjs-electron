{
  "name": "nextjs-electron-app",
  "version": "1.0.0",
  "description": "A minimal Electron app with Next.js App Router and TypeScript",
  "main": "dist/electron/main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:nextjs\" \"pnpm dev:electron\"",
    "dev:nextjs": "next dev -p 3001",
    "dev:electron": "wait-on http://localhost:3001 && cross-env NODE_ENV=development electron .",
    "build": "pnpm build:nextjs && pnpm build:electron",
    "build:nextjs": "next build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "dist": "pnpm build && electron-builder --config electron-builder.json",
    "dist:win": "pnpm build && electron-builder --win --config electron-builder.json",
    "dist:mac": "pnpm build && electron-builder --mac --config electron-builder.json",
    "dist:linux": "pnpm build && electron-builder --linux --config electron-builder.json",
    "dist:dir": "pnpm build && electron-builder --dir --config electron-builder.json",
    "dist:ci": "pnpm build && electron-builder --dir --config electron-builder.json",
    "type-check": "tsc --noEmit && tsc -p electron/tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:strict": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rimraf dist out .next",
    "start": "pnpm build && electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "next": "15.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "electron-util": "^0.18.1",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.4"
  },
  "keywords": [
    "electron",
    "nextjs",
    "typescript",
    "desktop",
    "app-router"
  ],
  "author": "Your Name",
  "license": "MIT"
}
